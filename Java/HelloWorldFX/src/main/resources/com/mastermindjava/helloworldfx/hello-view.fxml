<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mastermindjava.helloworldfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome To JavaFX!">
      <font>
         <Font name="System Bold" size="30.0" />
      </font></Label>
    <Button onAction="#onHelloButtonClick" text="Hello!" />
   <ImageView pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@trio%203d.png" />
      </image>
   </ImageView>
</VBox>
